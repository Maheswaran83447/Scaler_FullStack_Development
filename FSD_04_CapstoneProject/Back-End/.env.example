# Database (MongoDB Atlas or Local)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# For local development: mongodb://localhost:27017/ecommerce-capstone
DB_NAME=ecommerce-capstone

# Server
PORT=5001
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_use_strong_random_string
JWT_EXPIRY=7d

# Razorpay Payment Gateway (Required)
# Get your keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Email Service (Optional - for password reset, order confirmation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_SECURE=false
SMTP_FROM="Cartify Support <support@cartify.com>"

# Frontend URL (for CORS and password reset links)
FRONTEND_BASE_URL=http://localhost:5173

# File Upload (Optional - for future product images)
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=5242880
